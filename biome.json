{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"ignore": [
			"dist/",
			"node_modules/",
			"src/rest/"
		]
	},
	"formatter": {
		"formatWithErrors": true,
		"indentStyle": "space",
		"lineWidth": 160,
		"indentWidth": 2
	}
}